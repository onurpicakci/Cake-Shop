@model CakeShop.Areas.Identity.Models.UserLoginViewModel

@{
    ViewBag.Title = "title";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CakeShop | Admin</title>
    <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
    <link rel="stylesheet" href="/template/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/site.css"/>
    <link rel="shortcut icon" href="~/admin/images/favicon.png"/>
</head>

<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/admin/images/logo.svg" alt="logo">
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form asp-controller="Login" asp-action="Index" class="pt-3">
                            <div class="input-group mt-2">
                                <input type="text" asp-for="UserName" class="form-control form-control-lg" placeholder="Username">
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="input-group mt-4">
                                <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                <button class="btn btn-secondary password-visibility-button" type="button"><i class="fa fa-eye-slash" aria-hidden="true"></i></button>
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Forgot password?</a>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a href="/Identity/Register/Index" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
<script src="~/admin/js/off-canvas.js"></script>
<script src="~/admin/js/hoverable-collapse.js"></script>
<script src="~/admin/js/template.js"></script>
<script src="~/admin/js/settings.js"></script>
<script src="~/admin/js/todolist.js"></script>
<script src="~/js/Login/Index.js"></script>
</body>

</html>