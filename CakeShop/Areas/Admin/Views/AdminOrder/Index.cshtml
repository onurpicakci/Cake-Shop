@using Domain.Entity
@model List<Order>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Order List</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>ZipCode</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Total</th>
                        <th>Placed</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@(item.AddressLine1 + " " + item.AddressLine2)</td>
                            <td>@item.ZipCode</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>@item.State</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>$@item.OrderTotal</td>
                            <td>@item.OrderPlaced.ToString("g")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>