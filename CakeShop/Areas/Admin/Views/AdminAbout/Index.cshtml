@using Domain.Entity
@model List<About>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About List</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Feature 1</th>
                        <th>Feature 2</th>
                        <th>Feature 3</th>
                        <th>Feature 1 Level</th>
                        <th>Feature 2 Level</th>
                        <th>Feature 3 Level</th>
                        <th>Update</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Feature</td>
                            <td>@item.Feature2</td>
                            <td>@item.Feature3</td>
                            <td>@item.FeatureLevel</td>
                            <td>@item.Feature2Level</td>
                            <td>@item.Feature3Level</td>
                            <td>
                                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-outline-success">Update</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>