@using Domain.Entity
@model List<About>

<section class="about spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-6">
                    <div class="about__text">
                        <div class="section-title">
                            <span>About Cake shop</span>
                            <h2>@item.Title</h2>
                        </div>
                        <p>
                            @item.Description
                        </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="about__bar">
                        <div class="about__bar__item">
                            <p>@item.Feature</p>
                            <div id="bar1" class="barfiller">
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                                <span class="fill" data-percentage="@item.FeatureLevel"></span>
                            </div>
                        </div>
                    </div>
                    <div class="about__bar">
                        <div class="about__bar__item">
                            <p>@item.Feature2</p>
                            <div id="bar2" class="barfiller">
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                                <span class="fill" data-percentage="@item.Feature2Level"></span>
                            </div>
                        </div>
                    </div>
                    <div class="about__bar">
                        <div class="about__bar__item">
                            <p>@item.Feature3</p>
                            <div id="bar3" class="barfiller">
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                                <span class="fill" data-percentage="@item.Feature3Level"></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>