@using Domain.Entity
@model Cake

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Product detail</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/Cake/Index">Home</a>
                    <a href="/Cake/Shop">Shop</a>
                    <span>@Model.Name</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__img">
                    <div class="product__details__big__img">
                        <img class="big_img" src="~/template/img/shop/@Model.ImageUrl" alt="" width="446" height="446">
                    </div>
                    <div class="product__details__thumb">
                        <div class="pt__item active">
                            <img data-imgbigurl="/template/img/shop/@Model.ImageUrl2"
                                 src="~/template/img/shop/@Model.ImageUrl2" alt="" width="88px" height="88px">
                        </div>
                        <div class="pt__item">
                            <img data-imgbigurl="/template/img/shop/@Model.ImageUrl3"
                                 src="~/template/img/shop/@Model.ImageUrl3" alt="" width="88px" height="88px">
                        </div>
                        <div class="pt__item">
                            <img data-imgbigurl="/template/img/shop/@Model.ImageUrl4"
                                 src="~/template/img/shop/@Model.ImageUrl4" alt="" width="88px" height="88px">
                        </div>
                        <div class="pt__item">
                            <img data-imgbigurl="/template/img/shop/@Model.ImageUrl5"
                                 src="~/template/img/shop/@Model.ImageUrl5" alt="" width="88px" height="88px">
                        </div>
                        <div class="pt__item">
                            <img data-imgbigurl="/template/img/shop/@Model.ImageUrl6"
                                 src="~/template/img/shop/@Model.ImageUrl6" alt="" width="88px" height="88px">
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <div class="product__label">@Model.Category.Name</div>
                    <h4>@Model.Name</h4>
                    <h5>$@Model.Price</h5>
                    <p>
                        @Model.ShortDescription
                    </p>
                    <ul>
                        <li>
                            In stock:
                            <span>
                                @if (Model.InStock == true)
                                {
                                    <text>Yes</text>
                                }
                                else
                                {
                                    <text>No</text>
                                }
                            </span>
                        </li>
                        <li>Category: <span>@Model.Category.Name</span></li>
                    </ul>
                    <div class="product__details__option">
                        <a href="#" class="primary-btn add-to-cart-btn" data-cake="@Model.Id">Add to cart</a>
                        <a href="#" class="heart__btn" data-wishlist-cakeId="@Model.Id">
                            <span class="icon_heart_alt"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__tab">
            <div class="col-lg-12">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="" role="tab">Description</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel">
                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-8">
                                <p>
                                    @Model.LongDescription
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="related-products spad">
    @await Component.InvokeAsync("RelatedCakesList")
</section>