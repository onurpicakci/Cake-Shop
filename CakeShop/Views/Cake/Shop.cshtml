@using Domain.Entity
@model List<Cake>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Shop</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/Cake/Index">Home</a>
                    <span>Shop</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="shop spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="product__item">
                        <a href="/Cake/Details/@item.Id">
                        <div class="product__item__pic set-bg" data-setbg="@item.ImageThumbnailUrl">
                            <div class="product__label">
                                <span>@item.Category.Name</span>
                            </div>
                        </div>
                        </a>
                 
                        <div class="product__item__text">
                            <h6>
                                <a href="/Cake/Details/@item.Id">@item.Name</a>
                            </h6>
                            <div class="product__item__price">$@item.Price</div>
                            <div class="cart_add">
                                <a id="add_to_cart" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                                   asp-route-cakeId="@item.Id">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
