@model CakeShop.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h3 class="my-5">
    Shopping cart
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@line.Cake.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@line.Cake.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Cake.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Cake.ShortDescription</h6>
                                <h2>@line.Cake.Price.ToString("c")</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr/>
            <div class="text-center d-grid">
                <a class="btn btn-secondry" asp-controller="Order"
                asp-action="Checkout"><h4>Check out now!</h4></a>
            </div>
        </div>
    </div>
</div>
