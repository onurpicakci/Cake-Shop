@using Domain.Entity
@model List<Wishlist>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Wishlist</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/Cake/Index">Home</a>
                    <span>Wishlist</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wishlist__cart__table">
                    <table>
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Stock</th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img src="@item.ImageThumbnailUrl" alt="" width="90px" height="90px">
                                    </div>
                                    <div class="product__cart__item__text">
                                        <h6>@item.Name</h6>
                                    </div>
                                </td>
                                <td class="cart__price">$ @item.Price</td>
                                <td class="cart__stock">
                                    @if (item.InStock == true)
                                    {
                                        <text>Yes</text>
                                    }
                                    else
                                    {
                                        <text>No</text>
                                    }
                                </td>
                                <td class="cart__btn">
                                    <a href="#" class="primary-btn add-to-cart-btn" data-cake="@item.CakeId">Add to cart</a>
                                </td>
                                <td class="cart__close">
                                    <span class="icon_close" id="wishlistRemove" data-cakeId="@item.CakeId"></span>
                                </td>
                            </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>